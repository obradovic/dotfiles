[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[user]
    name = Zo Obradovic
    email = ping@obradovic.com
[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[web]
    browser = google-chrome
[push]
    default = simple
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    st = status
    ci = commit
    commmit = commit
    co = checkout
    br = branch
    glog = log --graph
    df = diff
    discover = blame
    praise = blame
    sub = submodule
[push]
    default = matching
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
