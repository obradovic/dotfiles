[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[user]
	name = Zo Obradovic
	email = ping@obradovic.com
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	st = status
	ci = commit
	co = checkout
	br = branch
	glog = log --graph
	df = diff
	discover = blame
	praise = blame
  sub = submodule
